Screen:
    MDCard:
        size_hint: 0.8, None  # Ajusta el ancho relativo al tamaño de la pantalla
        height: self.minimum_height  # Ajusta la altura automáticamente según el contenido
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: "20dp"  # Usa dp para asegurar un tamaño consistente en diferentes resoluciones
        spacing: "20dp"
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: 'SIRMG'
            font_size: "32sp"  # Usa sp para el tamaño de fuente para escalabilidad
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: "10dp"

        MDTextField:
            mode: "round"
            id: user
            hint_text: "Correo"
            icon_right: "account"
            size_hint: 0.8, None  # Ajusta el tamaño de manera relativa
            height: "48dp"
            font_size: "16sp"
            pos_hint: {"center_x": 0.5}

        Widget:
            size_hint_y: None
            height: "10dp"  # Espaciador ajustado a un tamaño relativo

        MDTextField:
            mode: "round"
            id: password
            hint_text: "Contraseña"
            icon_right: "eye-off"
            size_hint: 0.8, None  # Ajusta el tamaño de manera relativa
            height: "48dp"
            font_size: "16sp"
            pos_hint: {"center_x": 0.5}
            password: True

        Widget:
            size_hint_y: None
            height: "20dp"  # Espaciador ajustado a un tamaño relativo

        MDBoxLayout:
            size_hint_y: None
            height: self.minimum_height
            size_hint_x: 0.8
            spacing: "10dp"
            pos_hint: {'center_x': 0.5}
            padding: "10dp"
            orientation: 'horizontal'

            MDRoundFlatButton:
                text: 'Iniciar Sesión'
                font_size: "14sp"
                size_hint: 0.5, None  # Ajusta el tamaño de manera relativa
                height: "48dp"

            MDRoundFlatButton:
                text: 'Olvidé mi cuenta'
                font_size: "14sp"
                size_hint: 0.5, None  # Ajusta el tamaño de manera relativa
                height: "48dp"
