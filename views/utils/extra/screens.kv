<ScreenOne>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Main Menu"
        Button:
            text: "Button 1"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.register_view.health_points = 100

<ScreenTwo>:        

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            id: label
            text: "health points: " + str(root.health_points)

<Manager>:
    id: screen_manager

    login_view: login_view
    register_view: register_view

    ScreenOne:
        id: login_view
        name: "screen1"
        manager: screen_manager

    ScreenTwo:
        id: register_view
        name: "screen2"
        manager: screen_manager